@model IEnumerable<EventViewModel>;
@{
    ViewData["Title"] = "  المزيد من  ";

}

<div class="row m-3 mt-5">
    <div class="col-12 text-center ">
      <div class="row headBanar-MoreEvent ">
          <div class="col  my-auto">
              <h1 class="EvetTitle mb-4">  @ViewData["Title"]  </h1>
              <h4 class="Evet-sub-Title">عرض لجميع الفعاليات </h4>
          </div>
      </div>
    </div>
  </div>

  <div class="row">
  


          @foreach(var ev in Model){

      
          <div class="mb-2 col-auto ">
            <div class="HomeEventDetailsImage">
                <div class="top-left m-2">@ev.EventType</div>
                <div class="top-right m-2">@ev.SeatCount | مقعد</div>
                <div class=" AdVCard-style">
                  <a href="@Url.Action("EventDetails","Home", new {id = ev.Id })">   
                  <div class="image-style">
            
                      <!-- <img src="@ev.EvImage" alt="Lights" style="width:100%"> -->
                        <img src="@ev.EvImage" alt="Lights" style="width:100%" >
                        
                  
                  </div>
                </a>
                    <hr class="text-dark">
                      <div class="caption mt-2">
                        <div class="row">
                          <div class="col-lg-10 col-9 text-end ">
                            <h3 class="text-black pe-3 mb-3">@ev.EventName</h3>
                            <div class="d-flex p-3">
                                <h6  class=" d-inline-block place-style" style="font-weight:normal">المكان و الزمان : مركز الشباب</h6>
                                <h6 class=" d-inline-block place-style me-3">١٣ اكتوبر ٢٠٢٣ ٥:٤٠ م </h6>
                            </div>
                           
                          </div>
                          <div class="col-lg-2 col-3">
                        </div>
                        </div>
                      </div>
                  </div>
            </div>
          </div>
      
      

          }




  </div>


