@model IEnumerable<TicketModel>;
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Authentication.Cookies




@{


    ViewData["Title"] = "تفاصيل التذكرة";
   var UserID =  ViewData["UserToken"];
   var UserNme = ViewData["ShowFirstName"];
   var UserEmail = ViewData["UserEmil"];
   var NewPrice = ViewData["NewPrice"];
   var r = ViewData["RemainingSeats"]; 

    
}


<div class="container-fluid">

    <div class="row mt-3">

        <div class="col-12 text-center ">
            <div class="row headBanar-MoreEvent ">
                <div class="col  my-auto">
                    <h1 class="EvetTitle mb-4"> قائمة التذاكر </h1>
                    <h4 class="Evet-sub-Title"></h4>
                </div>
            </div>
        </div>
    </div>
    



</div>




<div class="container">


  
  @foreach(var MyTicket in Model){


    <div class="card mb-3" >
      <div class="row g-0">
        <div class="col-4">
          <img src="~/assets/qr.png" width="200" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-8">
          <div class="card-body">

            <div class="d-flex">

              <h5 class="card-title">@MyTicket.EventName</h5>

              <div class="me-auto">
                @MyTicket.TicketId
              </div>

            </div>


              <div class="row mt-5">
                <div class="col">
                  <table class=" table-responsive">
                    <tr>
                        <td rowspan="3">
                          <i class="isax isax-calendar-tick" style="font-size: 40px;"></i>
                        </td>
                        <td style="font-weight: bold;">عدد الكراسي</td>
                    </tr>
                    <tr>
                      <td >
                        @MyTicket.TicketCount
                      </td>
  
                    </tr>
                  </table>
                 
                </div>
                <div class="col">
  
                  <table class="table-responsive">
                    <tr>
                        <td rowspan="3">
                          <i class="isax isax-calendar-tick" style="font-size: 40px;"></i>
                        </td>
                        <td style="font-weight: bold;">التاريخ</td>
                    </tr>
                    <tr>
                      <td  >
                        @MyTicket.EventDate
                      </td>
  
                    </tr>
                  </table>
                 
                
                </div>
                <div class="col">
                  <table class="table-responsive">
                    <tr>
                        <td rowspan="3">
                          <i class="isax isax-clock" style="font-size: 40px;"></i>
                        </td>
                        <td style="font-weight: bold;">الوقت</td>
                    </tr>
                    <tr>
                      <td  >
                        @MyTicket.EventTime
                      </td>
  
                    </tr>
                  </table>
                 
                </div>
                <div class="col">
                  <table class="table-responsive">
                    <tr>
                        <td rowspan="3">
                          <i class="isax isax-map" style="font-size: 40px;"></i>
                        </td>
                        <td style="font-weight: bold;">المكان</td>
                    </tr>
                    <tr>
                      <td  >
                        @MyTicket.EventPlace
                      </td>
  
                    </tr>
                  </table>
                </div>
              </div>
            


          </div>
        </div>
      </div>
    </div>



  }
</div>






